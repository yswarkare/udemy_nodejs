<%- include('includes/head.ejs', {title}) %>

<h2 class="">Hello and welcome to the registration page, to register enter user details and click submit.</h2>
<form action="/user/registered" method="POST" class="user-form">
	<div class="register-user-form">
		<div class="form-item">
			<label for="firstname">First Name: </label>
			<input id="firstname" type="text" name="firstname" />
		</div>
		<div class="form-item">
			<label for="lastname">Last Name: </label>
			<input id="lastname" type="text" name="lastname" />
		</div>
		<div class="form-item">
			<label for="username">Username: </label>
			<input id="username" type="text" name="username" />
		</div>
		<div class="form-item">
			<label for="email">Email: </label>
			<input id="email" type="text" name="email" />
		</div>
		<div class="form-item form-btn-submit">
			<input type="submit" value="Submit" />
		</div>
	</div>
</form>

<%- include('includes/end.ejs') %>
